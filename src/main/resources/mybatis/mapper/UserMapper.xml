<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jef.dao.UserDao">
    <select id="selectByPrimaryKey" resultType="User" parameterType="java.lang.Long">
        select * from user
        where id = #{id}
    </select>
    <select id="getByNameAndPhone" resultType="User" parameterType="java.util.Map">
        select * from user
        where name = #{name}
        and phone = #{phone}
    </select>
    <select id="getByUser" resultType="User" parameterType="User">
        select * from user
        where name = #{name}
        and phone = #{phone}
    </select>
</mapper>